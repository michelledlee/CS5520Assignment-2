<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:elevation="@dimen/elevation_low"
    android:padding="@dimen/small_board_padding"
    tools:context=".GameActivity">

    <Button
        android:id="@+id/big1" style="@style/BigTileButton"
        android:layout_column="0"
        android:layout_row="0"
        android:state_focused="true"
        android:state_pressed="false"
        android:visibility="visible"/>
    <Button
        android:id="@+id/big2" style="@style/BigTileButton"
        android:layout_column="1"
        android:layout_row="0"
        android:state_focused="true"
        android:state_pressed="false"/>
    <Button
        android:id="@+id/big3" style="@style/BigTileButton"
        android:layout_column="2"
        android:layout_row="0"
        android:state_focused="true"
        android:state_pressed="false"/>
    <Button android:id="@+id/big4" style="@style/BigTileButton"
        android:layout_column="0"
        android:layout_row="1"
        android:state_focused="true"
        android:state_pressed="false"/>
    <Button android:id="@+id/big5" style="@style/BigTileButton"
        android:layout_column="1"
        android:layout_row="1"
        android:state_focused="true"
        android:state_pressed="false"/>
    <Button android:id="@+id/big6" style="@style/BigTileButton"
        android:layout_column="2"
        android:layout_row="1"
        android:state_focused="true"
        android:state_pressed="false"/>
    <Button android:id="@+id/big7" style="@style/BigTileButton"
        android:layout_column="0"
        android:layout_row="2"
        android:state_focused="true"
        android:state_pressed="false"/>
    <Button android:id="@+id/big8" style="@style/BigTileButton"
        android:layout_column="1"
        android:layout_row="2"
        android:state_focused="true"
        android:state_pressed="false"/>
    <Button android:id="@+id/big9" style="@style/BigTileButton"
        android:layout_column="2"
        android:layout_row="2"
        android:state_focused="true"
        android:state_pressed="false"/>
</GridLayout>